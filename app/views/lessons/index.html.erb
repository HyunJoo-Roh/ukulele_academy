<h1>Listing lessons</h1>

<table>
  <thead>
    <tr>
      <th>Lesson date</th>
      <th>Turn</th>
      <th>Goal</th>
      <th>Song</th>
      <th>Homework</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lessons.each do |lesson| %>
      <tr>
        <td><%= lesson.lesson_date %></td>
        <td><%= lesson.turn %></td>
        <td><%= lesson.goal %></td>
        <td><%= lesson.song %></td>
        <td><%= lesson.homework %></td>
        <td><%= lesson.user.name %></td>
        <td><%= link_to 'Show', user_lesson_path(@user, lesson) %></td>
        <td><%= link_to 'Edit', edit_user_lesson_path(@user, lesson) %></td>
        <td><%= link_to 'Destroy', user_lesson_path(@user, lesson), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lesson', new_user_lesson_path %>
