<h1>스케쥴</h1>
<% @h.each do |key,value| %> 
<div class="weekday col-md-2 panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title"><%=value%></h3>
  </div>
  <div class="panel-body"> 
    <% eval("@"+key).each do |monday| %>
    <div class="panel panel-info">
      <div class="panel panel-title">
        <span ><%= monday.hour.to_s.insert(2,':') %></span>
        <%= link_to edit_schedule_path(monday) do %>
        <span class="glyphicon glyphicon-wrench"></span>
        <%end%>
        <%= link_to monday, method: :delete, data: { confirm: 'Are you sure?' } do %>
        <span class="glyphicon glyphicon-remove"></span>
        <%end%>
      </div>
      <p>
        <%= link_to monday.user.name, user_lessons_path(monday.user) %>
      </p>
    </div>
    <% end %>
  </div>
</div>
 <%end%>
<br>
<div class="bottom">
  <%= link_to '새 일정 등록', new_schedule_path, {class: "btn btn-success"} %>
