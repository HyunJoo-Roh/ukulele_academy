<h1>레슨 스케쥴 현황</h1>

<table>
  <thead>
    <tr>
      <th>날짜</th>
      <th>시간</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.day %></td>
        <td><%= schedule.hour %></td>
        <td><%= link_to schedule.user.name, user_lessons_path(schedule.user) %></td>
        <td><%= link_to '수정', edit_schedule_path(schedule) %></td>
        <td><%= link_to '삭제', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

